{
  "name": "wellness-link",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run dev:web",
    "dev:web": "bun run --cwd packages/web dev",
    "dev:api": "bun run --cwd packages/api dev",
    "build": "bun run build:web && bun run build:api",
    "build:web": "bun run --cwd packages/web build",
    "build:api": "bun run --cwd packages/api build",
    "lint": "bun run lint:web && bun run lint:api",
    "lint:web": "bun run --cwd packages/web lint",
    "lint:api": "bun run --cwd packages/api lint",
    "format": "bunx prettier --check ."
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}
