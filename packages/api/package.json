{
  "name": "@wellness/api",
  "version": "0.1.0",
  "type": "module",
  "types": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "rm -rf dist && bun build src/index.ts --target bun --outfile dist/index.js",
    "lint": "bunx tsc --noEmit",
    "db:seed": "bun run src/db/seed.ts",
    "db:reset": "bun run src/db/reset.ts",
    "db:reset-seed": "bun run src/db/reset.ts && bun run db:seed",
    "db:full-reset": "bun run src/db/reset.ts && bunx drizzle-kit push && bun run db:seed"
  },
  "dependencies": {
    "@ai-sdk/fireworks": "^1.0.9",
    "@aws-sdk/client-s3": "^3.709.0",
    "@aws-sdk/s3-request-presigner": "^3.709.0",
    "@elysiajs/cors": "^1.4.0",
    "ai": "^5.0.106",
    "better-auth": "^1.4.3",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "elysia": "latest",
    "inngest": "^3.49.1",
    "postgres": "^3.4.7",
    "qrcode": "^1.5.4",
    "uuid": "^13.0.0",
    "zod": "^4.1.13",
    "zod-to-json-schema": "^3.25.0",
    "@upstash/redis": "^1.34.3"
  },
  "devDependencies": {
    "@types/qrcode": "^1.5.6",
    "@types/uuid": "^11.0.0",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.7"
  }
}
